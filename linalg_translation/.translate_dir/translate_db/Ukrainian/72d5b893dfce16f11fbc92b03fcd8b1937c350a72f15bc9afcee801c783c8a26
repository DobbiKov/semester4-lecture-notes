\newtheorem*{uovt}{UOVT}
\newtheorem*{notation}{Позначення}
\newtheorem*{previouslyseen}{Як було показано раніше}
\newtheorem*{problem}{Задача}
\newtheorem*{observe}{Зауваження}
\newtheorem*{property}{Властивість}
\newtheorem*{intuition}{Інтуїція}


