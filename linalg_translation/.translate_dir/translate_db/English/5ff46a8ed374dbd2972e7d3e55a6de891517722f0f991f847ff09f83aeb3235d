\begin{eg}
\[
f(x_1, x_2) = \begin{cases}
    \frac{x_1x_2}{x_1^2 + x_2^2} \text{ if } (x_1, x_2) \neq (0, 0)\\
    0 \text{ if } (x_1, x_2)=(0, 0)
\end{cases}
\]     
\begin{itemize}
    \item continuous on $\R^2 \setminus \{(0, 0)\}$
    \item partially continuous at $(0, 0)$
         \[
        f(x_1, 0) = \begin{cases}
            0 \text{ if } x_1 = 0\\
            0 \text{ if } x_1 \neq 0
        \end{cases}
        \] 
        \[
        f(0, x_2) = 0 \, \forall x_2
        \] 
    \item not continuous at $(0, 0)$:
         \[
        x_1 = r \cos(\theta) \quad x_2 = r \sin(\theta)
        \] 
        \[
        f(r\cos(\theta), r\sin(\theta)) = \begin{cases}
            0 \text{ if } r = 0\\
            \frac{r^2\cos(\theta)\sin(\theta)}{r^2} = \cos(\theta)\sin(\theta) \text{ if } r \neq 0
        \end{cases}
        \] 
        \[
        \lim_{r \to 0} f(r\cos(\theta), r\sin(\theta)) = \cos(\theta)\sin(\theta) \neq 0 \text{ if } \theta \neq 0, \pi, \frac{\pi}{2}, \ldots
        \] 
\end{itemize}
\end{eg}